# Core
TIMEZONE=America/New_York
DB_PATH=./data/wirewatch.db
FEEDS_PATH=./config/feeds.json

# Polling windows
POLL_INTERVAL_ACTIVE_SECONDS=20
POLL_INTERVAL_IDLE_SECONDS=90
ACTIVE_WINDOW_START_HOUR=18
ACTIVE_WINDOW_END_HOUR=1

# Scoring thresholds
RELEVANCE_THRESHOLD=0.55
SEVERITY_THRESHOLD=0.45

# OpenClaw hook target
OPENCLAW_BASE_URL=http://127.0.0.1:7331
OPENCLAW_AGENT_ID=quant
OPENCLAW_TOKEN=replace_me
OPENCLAW_TIMEOUT_SECONDS=5

# Webhook API
WEBHOOK_HOST=127.0.0.1
WEBHOOK_PORT=8787
WEBHOOK_PATH=/webhook/market-move

# Market move fast trigger
MARKET_MOVE_SYMBOL=GC1!
MARKET_MOVE_DELTA_USD=8
MARKET_MOVE_WINDOW_SECONDS=120

# Retry controls
RETRY_MAX_ATTEMPTS=3
RETRY_BACKOFF_SECONDS=0.5
